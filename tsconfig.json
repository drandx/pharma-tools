{
  "compilerOptions": {
      "target": "ES6",
      "lib": ["es6", "dom", "es2017"],
      "module": "commonjs",
      "noEmitOnError": false,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "sourceMap": false,
      "inlineSourceMap": true,
      "declaration": true,
      "sourceRoot": "lib",
      "outDir": "dist"
  },
  "exclude": [
      "dist",
      "test",
      "node_modules"
  ]
}